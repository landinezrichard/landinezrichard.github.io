/*
	rosado = #EC3C8C
	$gris = #dedede
	$black = #212121
*/

/*COMPONENTE KNOWLEDGE*/

.Knowledge
	
	&-list		
		text-align center
	&-item
		display flex
		flex-flow column nowrap
		justify-content space-between		
		color #fff
		background #111		
		padding .5em
		margin-bottom .5em
		border-radius .5em

		span:first-of-type
			font-size 3em
		// & > .icon-JS,//no estan sirviendo estos
		// & > .icon-jQuery,
		// & > .icon-php,
		// & > .icon-data
		// 	font-size 2.5rem
			
		&Description
			font-size 1em	

/*RESPONSIVE*/

/*Tablet*/
@media  screen and (max-width 768px)	
	.Knowledge
		//position relative		
		background rosado
		transition .3s
		
@media (min-width: 32.5em) and (max-width: 768px)
	.Knowledge
		
		&-list
			display flex
			flex-flow row wrap
			justify-content space-around
		&-item
			width 45%
			
/*Desktop*/
	
@media (min-width: 768px)
	.Knowledge
		padding 1em
		border-left 8px solid rosado
		border-bottom 1px solid $gris
		
		&-list
			display flex
			flex-flow row wrap
			justify-content space-around
		&-item
			width 30%
			&:hover
				background-color $gris
				color $black