//verde = #BAD800
verde_boton = #C2CC85
rojo_suave = #FFBCBC
letra =#272822

/*COMPONENTE FOOTER*/

.Footer
	&-button
		background naranja
		color white
		padding .5em 1em
		border 1px solid verde_boton
		border-radius 1em
		font-size 1.2em
		box-shadow 0 0 10px rgba(black,.5)
	&-formInput.valid
	&-textarea.valid
		border 1px solid aqua
	&-formInput.error
	&-textarea.error
		border 1px solid red
		background rojo_suave
		
.error
	display inline-block
	padding-bottom .5em

/*RESPONSIVE*/

/*screens smaller than 519px (32.438em)*/
@media  screen and (max-width: 32.438em)
		
	.Footer
		background verde
		transition .3s
		padding 2em 0
		text-align center
		max-width 30em
		mar
		
		&-left
			display inline-block			
		
		&-title
			font-size 1.5em
			font-weight bold
			
		&-form
			text-align center
			display inline-block
			color letra
		
		&-formInput	
		&-textarea
			display block
			margin 0 0 1em
			padding .5em
			border-radius 1em
			border none
			min-width 270px
			
		&-textarea			
			min-height 80px