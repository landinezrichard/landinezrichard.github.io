	.Footer
		background verde
		transition .3s
		padding 2em 0
		text-align center
		max-width 30em
		mar
		
		&-left
			display inline-block			
		
		&-title
			font-size 1.5em
			font-weight bold
			
		&-form
			text-align center
			display inline-block
			color letra
		
		&-formInput	
		&-textarea
			display block
