/*Mixin*/

repetir(propiedad, dif = false)	
	for num, index in (1..6)
		&:nth-child(6n+{num})
			if dif
				{propiedad[0]} propiedad[1] propiedad[2] dif[index]
			else
				{propiedad[0]} propiedad[1] propiedad[2]

repe-child(propiedad, dif = false)
	for num, index in (1..6)
		&:nth-child(6n+{num}) a:hover
		&:nth-child(6n+{num}) a:active
		&:nth-child(6n+{num}) a:focus
			if dif
				{propiedad[0]} propiedad[1] propiedad[2] dif[index]
			else
				{propiedad[0]} propiedad[1] propiedad[2]


