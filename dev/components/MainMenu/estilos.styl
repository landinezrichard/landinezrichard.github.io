/*COMPONENTE MENU PRINCIPAL*/

/*Mixin*/

repetir(propiedad, dif = false)	
	for num, index in (1..6)
		&:nth-child(6n+{num})
			if dif
				{propiedad[0]} propiedad[1] propiedad[2] dif[index]
			else
				{propiedad[0]} propiedad[1] propiedad[2]
				
repe-child(propiedad, dif = false)	
	for num, index in (1..6)
		&:nth-child(6n+{num}) a:hover
		&:nth-child(6n+{num}) a:active
		&:nth-child(6n+{num}) a:focus			
			if dif
				{propiedad[0]} propiedad[1] propiedad[2] dif[index]
			else
				{propiedad[0]} propiedad[1] propiedad[2]
			

.MainMenu
	line-height 1.2em
	
	&-button		
		border none
		background-color azul_claro
		order 2
		padding 0
		margin-right 1rem
		font-size 1.9rem
		
	&-list
		margin 0
		padding 0
		list-style none
		height 0
		overflow hidden
		transition height .3s ease
		font-size 1.5em
		font-weight 300
		top 0
		
		&--show
			height 280px
			max-height 30em
			
	&-item
		// &:nth-child(6n+1)
