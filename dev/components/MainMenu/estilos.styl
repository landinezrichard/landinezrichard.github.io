		// 	border-left 8px solid rgb(9, 18, 25)
		$propiedad = background-color
		$lista = azul_oscuro naranja rosado $red_pink #a7c200
		repetir($propiedad, $lista)
		$propiedad = border-left 8px solid
		$bordercolors = #000c55 #b26200 #a52a62 #cc103f #829700
		repetir($propiedad, $bordercolors)		
			
	&-link
		text-decoration none
		color rgba(249, 249, 249, .9)
		width 100%
		padding 1rem
		display block
		
/*Tablet*/

@media (min-width: 768px)
	.MainMenu		
		//line-height 5em
		max-width 1240px
		
		&-button
			display none
			
		&-list
			//height 5em
			height auto
			position relative
			top 0
			width 100%
			z-index 100
			margin 0 auto
			font-size 1em
			display flex
			line-height 5em
			
		&-item
			display inline-block
			border none
			
			$propiedad = border-bottom 5px solid
			// $lista = rgb(174, 78, 1) rgb(191, 117, 20) rgb(13, 111, 150) rgb(10, 75, 117) rgb(16, 34, 44) rgb(9, 18, 25)
			
			$lista = azul_oscuro naranja rosado $red_pink verde 
			repetir($propiedad, $lista)
			$propiedad = border-left none
			repetir($propiedad)
			$propiedad = background-color $black
			repetir($propiedad)
			$propiedad = background-color
			repe-child($propiedad, $lista)
			$propiedad = font-size 1.2em
			repe-child($propiedad)
			
		&-link
			padding 0 .5em			


